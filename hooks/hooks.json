{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "shell",
            "shell": "/bin/bash",
            "args": ["-lc", "$CLAUDE_PLUGIN_ROOT/hooks/session-start.sh"],
            "cwd": "$CLAUDE_PLUGIN_ROOT"
          }
        ],
        "relevance": { "enabled": false }
      }
    ]
  }
}
